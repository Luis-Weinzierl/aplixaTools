@typeparam TItem

<div 
	id=@($"dragdroparea-{GetHashCode()}") 
	class="container @Class"
	@onmouseup="ContainerOnMouseUp" >

	@for (var i = 0; i < _items.Count; i++)
	{
		var idx = i;
		var item = _items[idx];

		<div
			id=@($"dragdropitem-{idx}")
			class="item @_itemClasses[idx]"
			@onmousedown="_ => ItemOnMouseDown(idx)" >

			@ChildContent(item)
		</div>
	}
</div>